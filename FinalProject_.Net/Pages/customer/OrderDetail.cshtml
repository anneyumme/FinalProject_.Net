@page
@model OrderDetailModel
@{
    Layout = "_LayoutCustomer";
}

<!--Main layout-->
<main class="mb-6" style="margin-top: 30px">
    <div class="container">
        <!-- Section: Cart -->
        <section class="">
            <div class="row gx-lg-5">
                <div class="col-lg-8 mb-4 mb-md-0">
                    <!-- Section: Product list -->
                    <section class="mb-5">
                        <!-- Single item -->
                        
                        @foreach (var item in Model.orderDetails)
                        {
                        <div class="row border-bottom mb-4">
                            <div class="col-md-2 mb-4 mb-md-0">
                                <div class="
                            bg-image
                            ripple
                            rounded-5
                            mb-4
                            overflow-hidden
                            d-block
                            " data-ripple-color="light">
                                    <img src="/customer/OrderDetail?handler=Image&id=@item.Product.Id" class="w-100" alt=""/>
                                    <a href="#!">
                                        <div class="hover-overlay">
                                            <div class="mask" style="background-color: hsla(0, 0%, 98.4%, 0.2)"></div>
                                        </div>
                                    </a>
                                </div>
                            </div>

                            <div class="col-md-8 mb-4 mb-md-0">
                                <p class="fw-bold">@item.Product.Name</p>
                                <p class="mb-1">
                                    <span class="text-muted me-2">Size:</span><span>8.5</span>
                                </p>
                                <p>
                                        <span class="text-muted me-2">Description:</span><span>@item.Product.Description</span>
                                </p>

                            </div>
                            <div class="col-md-2 mb-4 mb-md-0">
                                <div class="form-outline mb-4" data-mdb-input-init>
                                    <input type="number" id="typeNumber" disabled class="form-control" value="1" min="1"/>
                                    <label class="form-label" for="typeNumber">Quantity</label>
                                </div>

                                <h5 class="mb-2">
                                    <span class="align-middle">$ @item.Product.Price</span>
                                </h5>
                            </div>
                        </div>
                        }

                    </section>
                </div>

                <div class="col-lg-4 mb-4 mb-md-0">
                    <!-- Section: Summary -->
                    <section class="shadow-4 p-4 rounded-5 mb-4">
                        <h5 class="mb-5">The total amount of</h5>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Full amount </span>
                            <span>$ @Model.Order.total</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Shipping </span>
                            <span>@Model.Order.paymentMethod</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Payment </span>
                            <span>@Model.Order.paymentMethod</span>
                        </div>
                        <hr class="my-4"/>
                        <h5 class="mb-5">Customer Information</h5>

                        <div class="d-flex justify-content-between mb-3">
                            <span>Full Name </span>
                            <span>@(Model.Order.Customer.FName +" "+ Model.Order.Customer.LName)</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Email Address </span>
                            <span>@Model.Order.Customer.EmailAddress</span>
                        </div>


                    </section>
                    <!-- Section: Summary -->

                </div>
            </div>
        </section>
        <!-- Section: Cart -->
    </div>
</main>